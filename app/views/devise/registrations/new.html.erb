<div id="myProgress">
  <div id="myBar"></div>
</div>

<div data-controller="toggle-field-registration" class="form-registration">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="email" data-toggle-field-registration-target="email">
      <%= link_to root_path  do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <h2>Mon adresse mail</h2>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: 'Email',
                  label: '',
                  input_html: { autocomplete: "email", class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showEmail', toggle_field_registration_target: "emailin"}}%>
      <div data-toggle-field-registration-target="emailbut" data-action="click->toggle-field-registration#showEmail" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="password none" data-toggle-field-registration-target="password">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showEmail" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>Mon mot de passe</h2>
      <%= f.input :password,
                  required: true,
                  placeholder: 'Mot de passe',
                  label: '',
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password",  class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showPassword', toggle_field_registration_target: "passwordin"}} %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: 'Confirmer mot de passe',
                  label: '',
                  input_html: { autocomplete: "new-password", class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showPassword', toggle_field_registration_target: "passwordconfin"} } %>
      <div data-toggle-field-registration-target="passwordbut" data-action="click->toggle-field-registration#showPassword" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="none" data-toggle-field-registration-target="name">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showPassword" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>Je m'appelle..</h2>
      <%= f.input  :first_name,
                   placeholder: 'Prénom',
                   label: '',
                   input_html: { class: 'input-registration' }%>
      <%= f.input  :last_name,
                   placeholder: 'Nom',
                   label: '',
                   input_html: { class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showName' , toggle_field_registration_target: "namein"} }%>
      <div data-toggle-field-registration-target="namebut" data-action="click->toggle-field-registration#showName" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="none" data-toggle-field-registration-target="gender">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showName" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>Je suis..</h2>
      <%= f.input  :gender,
                   placeholder: 'Genre',
                   label: '',
                   collection: %w[Homme Femme Autre],
                   include_blank: 'Genre',
                   input_html: { class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showCity'} }%>
      <div data-toggle-field-registration-target="genderbut" data-action="click->toggle-field-registration#showGender" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="none" data-toggle-field-registration-target="city" data-controller="geocode">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showGender" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>J'habite à</h2>
      <%= f.input  :city,
                   placeholder: 'Ville',
                   label: '',
                   input_html: { id: 'address', class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showCity ', toggle_field_registration_target: "cityin"} }%>
      <pre id="result" data-geocode-target="result"></pre>
      <div data-toggle-field-registration-target="citybut" data-action="click->toggle-field-registration#showCity" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="none" data-toggle-field-registration-target="birthday">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showCity" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>Je suis né le </h2>
      <%= f.input :birthday,
                   # label: '',
                   # :as => :date, :start_year => Date.today.year - 90,
                   # :end_year => Date.today.year - 18,
                   # :order => [:day, :month, :year],
                  start_year: Date.today.year - 30,
                   label: false,
                    as: :date,
                    html5: true,
                   input_html: { autocomplete: 'bday', class: 'input-registration', data: { action: 'keyup->toggle-field-registration#showPhoto'}}%>
       <div data-toggle-field-registration-target="birthdaybut" data-action="click->toggle-field-registration#showPhoto" class="btn btn-color" id="next">Continuer</div>
    </div>
    <div class="none" data-toggle-field-registration-target="photo">
      <svg xmlns="http://www.w3.org/2000/svg" id="next" data-action="click->toggle-field-registration#showBirthday" class="h-6 w-6 arrow-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" arrow_left>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <h2>Je me décrirais comme</h2>
      <%= f.input  :description,
                   as: :text,
                   label: false,
                   placeholder: 'Description',
                   class: 'input-registration'%>
      <h2>Je ressemble à</h2>
      <label id="preview" class="no-file">
        <%= f.input  :photo,label: false, as: :file, input_html: { class: 'input-photo' } %>
        <img id="img-preview" src="data:image/png;base64," alt="">
        <div id="img-plus">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </div>
      </label>
      <div class="form-actions">
        <%= f.button :submit, "Terminer", class: 'btn btn-color', disabled: true,  id: 'submit', data: { :toggle_field_registration_target => "submit" }%>
      </div>
    </div>
  </div>

<% end %>
</div>

